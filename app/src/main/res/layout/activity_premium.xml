<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.premium.PremiumActivity">


    <TextView
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:id="@+id/label_premium"
        android:textSize="24sp"
        android:text="Premium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/linear_account"
        android:orientation="vertical"
        android:layout_below="@id/label_premium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="8dp"
            android:id="@+id/txt_bank"
            android:textSize="18sp"
            android:text="Bank "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="8dp"
            android:id="@+id/txt_account_name"
            android:textSize="18sp"
            android:text="Nama Rekening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="8dp"
            android:id="@+id/txt_account_number"
            android:textSize="18sp"
            android:text="Nomor Rekening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            android:text="Harga : Rp. 50.000,-"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_below="@id/linear_account"
        android:id="@+id/img_payment"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <Button
        android:id="@+id/btn_payment"
        android:layout_marginTop="10dp"
        android:layout_below="@id/img_payment"
        android:text="masukkan bukti pembayaran"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:enabled="false"
        android:id="@+id/btn_upload"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/colorBlue"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn_payment"
        android:textAllCaps="false"
        android:text="upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>